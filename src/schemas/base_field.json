{
	"$schema": "http://json-schema.org/schema#",
	
	"type": "object",
	"properties": {
		"type": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"description": {
			"type": "integer"
		},
		"primary": {
			"type": "boolean"
		},
		"unique": {
			"type": "boolean"
		},
		"index": {
			"type": "boolean"
		},
		"nullable": {
			"type": "boolean"
		},
		"foreign": {
			"type": "string",
			"pattern": "^.*\\..*$"
		},
		"default": {
			"type": [
				"string",
				"number",
				"array",
				"object",
				"boolean",
				"null"
			]
		}
	}
}