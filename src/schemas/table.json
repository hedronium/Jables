{
	"$schema": "http://json-schema.org/schema#",

	"type": "object",
	"additionalProperties": false,
	"properties": {
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"minItems": 1
		},
		"fields": {
			"type": "object",
			"patternProperties": {
				"^soft-deletes$": {
					"type": "boolean"
				},
				"^timestamps$": {
					"type": "boolean"
				},
				"^(?!timestamps|soft-deletes).*$": {
					"type": "object",
					"properties": {
						"type": {"$ref": "field_type.json#/type"}
					},
					"required": ["type"]
				}
			},
			"minProperties": 1
		},
		"foreign": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "string",
					"pattern": "^.*\\..*$"
				}
			},
			"minProperties": 1
		},
		"unique": {
			"type": "array",
			"items": {
				"type": "array",
				"items": {
					"type": "string"
				},
				"minItems": 2
			},
			"minItems": 1
		},
		"primary": {
			"type": "array",
			"minItems": 2
		},
		"title": {
			"type": "string"
		},
		"description": {
			"type": "string"
		}
	},
	"required": ["fields"]
}
